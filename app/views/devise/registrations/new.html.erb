<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),wrapper: "horizontal_form") do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group col-xs-12">
    <%= f.input :username, autofocus: true , input_wrapper_html: { class: "col-xs-7" } %>

    <%= f.input :email, autofocus: true , input_wrapper_html: { class: "col-xs-8" } %>

    <% if f.object.password_required? %>

      <%= f.input :password, autocomplete: "off" , input_wrapper_html: { class: "col-xs-7" },hint: '8characters minimum' %>

        <%= f.input :password_confirmation, autocomplete: "off" , input_wrapper_html: { class: "col-xs-7" } %>

    <% end %>
  </div>

  <div class="actions">
    <h3><%= f.submit "Sign up",:class => 'btn btn-primary btn-lg' %></h3>
  </div>
<% end %>
